<%- include ("header") %>
<div class="container">
	<h1 style="text-align:center;">Update <%= camps.name %> campground</h1>
	<div style="width:30%;margin:50px auto;">
		<form action="/campgrounds/<%= camps._id %>/update" method="post">
			<div class="d-grid gap-3">
				<div class="form-group">
					<input class="form-control" type="text" name="name" value="<%= camps.name %>" autofocus required>
				</div>
				<div class="form-group">
					<input class="form-control" type="number" name="price" value="<%= camps.price %>" min="0.01" step="0.01" required>
				</div>
				<div class="form-group">
					<input class="form-control" type="text" name="image" value="<%= camps.image %>" required>
				</div>
				<div class="form-group">
					<textarea class="form-control" rows='6' name="description" required><%=camps.description%></textarea>
				</div>
				<button type='button' class="btn btn-outline-success">Update</button>
			</div>
		</form> 
	</div>
</div>
<%- include ("footer") %>